<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.HBox?>
<AnchorPane xmlns:fx="http://javafx.com/fxml" prefHeight="800" prefWidth="1200"
            xmlns="http://javafx.com/javafx">
    <children>
    <ImageView fitHeight="800.0" fitWidth="1200.0"
               pickOnBounds="true">
        <image>
            <Image url="@background.png" />
        </image>
    </ImageView>
    <HBox alignment="CENTER" prefHeight="800.0" prefWidth="1200.0">
        <children>
            <Canvas fx:id="gameCanvas" height="800.0" width="1200.0"
                    HBox.hgrow="ALWAYS" />
        </children>
    </HBox>
    </children>
</AnchorPane>
